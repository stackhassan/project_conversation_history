<div class="min-h-screen flex items-center justify-center bg-[#343088] p-6">
  <div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-md">
    
    <h2 class="text-3xl font-bold text-[#343088] text-center mb-6">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-4") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :name, class: "block text-gray-700 font-semibold" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", 
              class: "w-full border rounded-lg p-3 focus:ring-[#343088] focus:border-[#343088]" %>
      </div>

      <div>
        <%= f.label :email, class: "block text-gray-700 font-semibold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "w-full border rounded-lg p-3 focus:ring-[#343088] focus:border-[#343088]" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-gray-700 font-semibold" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", 
              class: "w-full border rounded-lg p-3 focus:ring-[#343088] focus:border-[#343088]" %>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-gray-700 font-semibold" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", 
              class: "w-full border rounded-lg p-3 focus:ring-[#343088] focus:border-[#343088]" %>
      </div>

      <div class="flex justify-center">
        <%= f.submit "Sign Up", 
              class: "bg-[#343088] text-white px-6 py-3 rounded-lg hover:bg-[#2b2766] transition" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
