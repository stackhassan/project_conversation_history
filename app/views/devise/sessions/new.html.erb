<div class="flex items-center justify-center min-h-screen bg-[#343088]">
  <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-center text-[#343088] mb-6">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-4") do |f| %>
      <div class="field">
        <%= f.label :email, class: "block text-gray-700 font-medium" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#343088]" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "block text-gray-700 font-medium" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#343088]" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-gray-700" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "w-full bg-[#343088] text-white py-2 rounded-lg hover:bg-[#2b2766] transition duration-200" %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
