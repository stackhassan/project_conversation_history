<div class="bg-white shadow-md rounded-lg p-6 border border-gray-200">
  <h1 class="text-2xl font-bold text-[#343088] mb-4"> <%= project.title %> </h1>

  <p class="text-gray-700 mb-2">
    <b class="text-gray-900">Description:</b> <%= project.description %>
  </p>

  <p class="text-gray-700 mb-4">
    <b class="text-gray-900">Status:</b> <span class="px-4 py-3 rounded-lg bg-[#343088] text-white"> <%= project.status.humanize %> </span>
  </p>

  <%= link_to "View Project", project, 
        class: "inline-block bg-[#343088] text-white px-4 py-2 rounded-lg hover:bg-[#2b2766] transition duration-200" %>
</div>
